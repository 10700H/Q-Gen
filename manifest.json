{
  "manifest_version": 2,
  "name": "Q-Gen",
  "version": "1.2.4.0",
  "description": "Simple QR code generator for firefox which is inspired by chrome/edge's ability to convert links to QR code",
  "homepage_url": "https://github.com/JARVIS10700/Q-Gen",
   "icons": {
    "48": "icons/qricon48.png",
    "96": "icons/qricon96.png"
  },
  "background": {
        "scripts": ["features/contextMenu.js"],
        "persistent": false
  },

  "permissions": ["activeTab","contextMenus","clipboardWrite","downloads"],
  
  "browser_action": {
    "default_icon": "icons/qricon512.png",
    "default_title": "Q-Gen",
    "default_popup": "popup.html"
  }
}